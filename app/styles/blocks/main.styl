.features
	margin-top 180px
	clearfix()
	article
		float left
		width 300px
		position relative
	h2
		margin 12px
		margin-left 70px
		font-family 'Bebas Neue'
		color main-color
		font-size 1.45rem
		letter-spacing .4px

	.desc
		margin-top 33px
		margin-bottom 15px
		font-size 13px
		line-height 18px

	.btn
		display block
		padding 10px

	.btn-more
		font-family 'Bebas Neue'
		color #fff
		background-color main-color
		text-transform uppercase
		text-decoration none
		width 53px



	.services
		margin 0 20px
		&:before
			content ''
			position absolute
			top 10px
			sprite $i-ga

	.portfolio
		&:before
			content ''
			position absolute
			top 10px
			sprite $i-sh

	.follow
		&:before
			content ''
			position absolute
			top 10px
			sprite $i-man

.recent-works
	font-family 'Bebas Neue'
	max-width 940px
	clearfix()
	&-header
		margin-top 39px
		margin-bottom 20px
		font-size 1.45rem
		letter-spacing .5px
		color slider-bg
		background-image url(../images/bg-line.png)
		background-repeat repeat-x
	h1
		background #fff url(../images/bg-main.png)
		width 132px
.recent-work
	float left
	border 1px solid border-color
	figcaption
		color heading-gray
		font-family 'Bebas Neue'
		font-size 1.2rem
		margin 10px 12px
		letter-spacing 1px
.recent-work-footer
	font-size .85rem
	margin-left 13px
	margin-top -7px
	margin-bottom 11px
	color main-color

.recent-work + .recent-work
	margin-left 17px
