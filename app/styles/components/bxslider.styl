.slide-info
	top 244px
	left 37px
	position absolute
	width 413px
	height 124px
	color white
	background-color rgba(232, 102, 60, 0.8)
.slide-title
	font-family 'Bebas Neue'
	text-transform uppercase
	margin 20px
	font-size 1.5rem
.slide-desc
	font-size 0.8rem
	margin-left 20px
	font-family 'Helvetica Neue'
.slider-controls-next
	position absolute
	sprite $i-next
	top 156px
	right 20px
	a.bx-next
		display block
		height inherit
		width inherit
		text-indent -9999em



.slider-controls-prev
	position absolute
	display block
	sprite $i-next
	top 156px
	left 26px
	transform rotate(180deg)
	a.bx-prev
		display block
		height inherit
		width inherit
		text-indent 9999em

.bx-pager-item
	display inline-block
	margin-top 17px
	margin-right 20px
	&:last-child
		margin-right 0






