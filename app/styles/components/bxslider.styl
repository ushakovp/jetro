.slider
	position relative
	top 15px
	right 13px
	width 940px
	height 400px
	margin 0 auto
	background slider-bg
	&:after
		position absolute
		content ''
		top 0
		left 950px
		height 3.6em
		width 13.5em
		background-color rgba(232, 102, 60, 0.5)
	&:before
		position absolute
		content ''
		height 3.6em
		width 13.5em
		left -226px
		background-color rgba(232, 102, 60, 0.5)

