mixin slide(index, val)
	li
		div(class="slide"+index)
			.slide-info
				.slide-title= "Slide "+val
				.slide-desc= desc

section.slider
	ul.bxslider
		each val, index in slides
			+slide(index+1, val)
	.slider-controls
		.slider-controls-prev
		.slider-controls-next

